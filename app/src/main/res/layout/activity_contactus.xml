<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F6FB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Nari Nexus"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reach out to the team — we’re here for you. Tap an item to call, email or open our socials."
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingBottom="12dp" />


        <!-- Contact card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <!-- Phones header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Helpline Number of Developers"
                android:textStyle="bold"
                android:textColor="#222222"
                android:paddingBottom="6dp" />

            <!-- Phone rows (simple tappable rows) -->
            <LinearLayout
                android:id="@+id/phoneRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Phone icon" />

                <TextView
                    android:id="@+id/phone1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Phone icon" />

                <TextView
                    android:id="@+id/phone2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9123456780"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Phone icon" />

                <TextView
                    android:id="@+id/phone3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9001122334"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_phone"
                    android:contentDescription="Phone icon" />

                <TextView
                    android:id="@+id/phone4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8899776655"
                    android:textSize="16sp"
                    android:textColor="#1E88E5"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />


            <!-- Socials: each row is an icon + text and is clickable -->
            <LinearLayout
                android:id="@+id/emailRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_gmail"
                    android:contentDescription="Email icon" />

                <TextView
                    android:id="@+id/emailLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="narinexusteam444@gmail.com"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/instagramRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_instagram"
                    android:contentDescription="Instagram icon" />

                <TextView
                    android:id="@+id/instagramLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="instagram.com/narinexus25"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/facebookRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_fb"
                    android:contentDescription="Facebook icon" />

                <TextView
                    android:id="@+id/facebookLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="facebook.com/narinexus25"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Contact form (your previous form) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send us a message"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:elevation="2dp"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/editTextMessage"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="Your Message"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="12dp"
                android:background="@android:drawable/editbox_background"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="#6A1B9A"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
