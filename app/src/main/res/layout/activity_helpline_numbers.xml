<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👩‍🦰 Women Helpline (All India)"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callWomenHelpline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 1091"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏠 Domestic Violence Helpline"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callDomesticViolence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 181"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚖ National Commission for Women"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callNCW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 011-26942369"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚓 Police"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callPolice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 100"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🚑 Ambulance"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callAmbulance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 102"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🧠 Mental Health Helpline"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callMentalHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 080-46110007"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <LinearLayout
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👶 Child Helpline"
                    android:textSize="18sp"
                    android:textColor="#4A148C"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/callChildHelpline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call 1098"
                    android:backgroundTint="#8E24AA"
                    android:textColor="#fff"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>