<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Jewellery"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:fontFamily="sans-serif-medium" />

        <!-- Product 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/jewelleryProduct1Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_jewellery1"
                android:contentDescription="Product 1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold Plated Necklace"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Product 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/jewelleryProduct2Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_jewellery2"
                android:contentDescription="Product 2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oxidised Earrings"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Product 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/jewelleryProduct3Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_jewellery3"
                android:contentDescription="Product 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bracelet Set"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Product 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/jewelleryProduct4Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_jewellery4"
                android:contentDescription="Product 4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finger Rings Combo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
