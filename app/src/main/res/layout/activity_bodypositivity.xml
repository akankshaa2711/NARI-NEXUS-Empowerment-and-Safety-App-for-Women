<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love Yourself 💜"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Affirmation Card -->
        <TextView
            android:id="@+id/affirmationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ You are enough. Just as you are. ✨"
            android:padding="16dp"
            android:textSize="18sp"
            android:textColor="#444"
            android:background="#F3E5F5"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Inspiring Story -->
        <TextView
            android:id="@+id/storyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💬 Pooja, 32: I was called fat in school, now I run a fitness club."
            android:padding="16dp"
            android:textSize="16sp"
            android:background="#E1BEE7"
            android:textColor="#222"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/storyText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💬 Anjali, 28: I used to hide my scars. Now I wear them like armor."
            android:padding="16dp"
            android:textSize="16sp"
            android:background="#E1BEE7"
            android:textColor="#222"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <!-- Prompt -->
        <TextView
            android:id="@+id/promptText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📝 What do you love about yourself?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#6A1B9A" />

        <EditText
            android:id="@+id/responseInput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Write here..."
            android:textColor="#6A1B9A"
            android:gravity="top"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />
        <TextView
            android:id="@+id/selfLoveMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#4A148C"
            android:padding="16dp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#fff"
            android:backgroundTint="#8E24AA"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Real Women Who Redefined Beauty💜"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="1dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap to know them more✨"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="5dp"/>
        <!-- Image Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/buttonLaxmi"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/laxmi"
                        android:contentDescription="Laxmi Agarwal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Laxmi Agarwal"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:id="@+id/buttonHarnaam"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/harnaam"
                        android:contentDescription="Harnaam Kaur" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harnaam Kaur"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/buttonUsha"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/usha"
                        android:contentDescription="Usha Vishwakarma" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usha Vishwakarma"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/buttonReshma"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/reshma"
                        android:contentDescription="Reshma Qureshi" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reshma Qureshi"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/buttonMeghna"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/meghna"
                        android:contentDescription="Meghna Sahoo" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meghna Sahoo"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/buttonAnjali"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/anjali"
                        android:contentDescription="Anjali Lama" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anjali Lama"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_horizontal">
                    <ImageButton
                        android:id="@+id/buttonWinnie"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="centerCrop"
                        android:background="@null"
                        android:src="@drawable/winnie"
                        android:contentDescription="Winnie Harlow" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winnie Harlow"
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#F3E5F5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If a transgender woman can fight for her identity and shine,\nIf an acid attack survivor can walk the runway with confidence,\nIf a woman with vitiligo can redefine beauty standards,\nIf a girl from a small village can lead thousands,\nThen what is stopping you today?\nYou have that same strength within you.\nThey are just a few among countless strong women – and you too can be one among them. 💜"
                android:textSize="16sp"
                android:textColor="#4A148C"
                android:padding="16dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>