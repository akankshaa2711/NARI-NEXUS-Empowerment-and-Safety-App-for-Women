<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Overall satisfaction (required) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How satisfied are you with the app overall? (⭐1–5) *"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etOverallSatisfaction"
            android:hint="Enter your rating (1-5)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Easy to use -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Was the app easy to use and navigate? (Yes/No) *"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etEasyToUse"
            android:hint="Yes / No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Expectations -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Did the app meet your expectations? (Yes/No) *"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etExpectations"
            android:hint="Yes / No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Most useful feature -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which feature do you find the most useful?"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etMostUsefulFeature"
            android:hint="Type here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Missing feature -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is there any feature you think is missing?"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etMissingFeature"
            android:hint="Type here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Speed performance -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate the app’s speed and performance? (⭐1–5)"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etSpeedPerformance"
            android:hint="Enter your rating (1-5)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Design appearance -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate the app’s design and appearance? (⭐1–5)"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etDesignAppearance"
            android:hint="Enter your rating (1-5)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Easy to find -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Was it easy to find what you were looking for? (Yes/No)"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etEasyFind"
            android:hint="Yes / No"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Recommend (NPS) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How likely are you to recommend this app to others? (⭐1–10)"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etRecommendApp"
            android:hint="Enter your rating (1-10)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Usage frequency -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How often do you think you’ll use this app? (Daily / Weekly / Rarely)"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etUsageFrequency"
            android:hint="Daily / Weekly / Rarely"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Improve -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What’s the one thing you’d like us to improve?"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etImprove"
            android:hint="Type here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp" />

        <!-- Other suggestions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Do you have any other suggestions or comments?"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etOtherSuggestions"
            android:hint="Type here..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
