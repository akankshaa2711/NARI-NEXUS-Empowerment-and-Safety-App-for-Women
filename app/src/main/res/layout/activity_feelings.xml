<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feelings_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How are you feeling?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etFeelingFull"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="Write about how you're feeling. Use the mic to speak..."
        android:inputType="textMultiLine"
        android:minLines="8"
        android:padding="12dp"
        android:background="?android:attr/editTextBackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/btnFeelingMic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_mic"
            android:contentDescription="Speak"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnSaveFeeling"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Save" />

        <Button
            android:id="@+id/btnCancelFeeling"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Cancel"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
