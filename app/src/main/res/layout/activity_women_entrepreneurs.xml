<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Women Entrepreneurs Books"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#6A1B9A"
            android:fontFamily="sans-serif-medium" />

        <!-- Book 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/bookProduct1Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_book1"
                android:contentDescription="Book 1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="She Means Business"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Book 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/bookProduct2Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_book2"
                android:contentDescription="Book 2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Girl Boss"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Book 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/bookProduct3Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_book3"
                android:contentDescription="Book 3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lean In"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Book 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/bookProduct4Button"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/ic_book4"
                android:contentDescription="Book 4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Women Who Launch"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
